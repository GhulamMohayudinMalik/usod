# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/usod

# API Security
INGEST_API_KEY=your-secure-api-key-here-min-32-chars

# Frontend URL (update for production)
FRONTEND_URL=http://localhost:3000

# Desktop App URL (optional)
DESKTOP_APP_URL=http://localhost:3001

# Additional allowed origins (comma-separated, for production)
# ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Server Configuration
PORT=5000
NODE_ENV=development

# Python AI Service (network-based-ai/ai_service/main.py)
# This connects to the NFStream-based FastAPI service for ML network threat detection
# Features: Real-time monitoring, PCAP analysis, webhook integration
PYTHON_AI_SERVICE_URL=http://localhost:8000

# JWT Secret (MUST be changed in production - use strong random string)
JWT_SECRET=your-jwt-secret-key-here-min-64-chars-recommended

# Backup Configuration (optional)
BACKUP_DIR=./backups
MAX_BACKUPS=10
BACKUP_RETENTION_DAYS=30

# AWS Configuration (for production deployment)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name

# Production MongoDB (example - use AWS DocumentDB or MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/usod?retryWrites=true&w=majority
