# Backend Environment Variables
# Generated by Ansible

# Node Environment
NODE_ENV={{ node_env }}
PORT={{ service_port }}

# MongoDB
MONGODB_URI={{ mongodb_uri }}

# JWT Secret
JWT_SECRET={{ jwt_secret }}

# CORS Origins
CORS_ORIGIN=*

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=info

# Session
SESSION_SECRET={{ jwt_secret }}

# Network AI Service
PYTHON_SERVICE_URL=http://{{ hostvars['gcp-ai']['ansible_host'] }}:8000

# Blockchain Service (if deployed)
BLOCKCHAIN_ENABLED=false
# BLOCKCHAIN_PEER_URL=http://{{ hostvars['azure-blockchain']['ansible_host'] }}:7051

# Email (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend URL
FRONTEND_URL=http://{{ hostvars['aws-frontend']['ansible_host'] }}:3000

