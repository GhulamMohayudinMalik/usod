# GCP Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and update with your values

# GCP Project Configuration (REQUIRED)
# Get your project ID: gcloud projects list
project_id = "your-gcp-project-id"  # CHANGE THIS!

# Project Configuration
project_name = "usod"
environment  = "production"  # production, staging, or development

# GCP Configuration
region = "us-central1"    # Change to your preferred region
zone   = "us-central1-a"  # Change to your preferred zone

# Compute Engine Configuration
machine_type = "e2-micro"  # Free tier eligible (subject to limits)

# SSH Configuration
ssh_user             = "ubuntu"
ssh_public_key_path  = "~/.ssh/usod-key.pub"  # Path to your public key

# Security (IMPORTANT: Restrict SSH access in production!)
allowed_ssh_ranges = ["0.0.0.0/0"]  # WARNING: Change this to your IP!

# Static IP (Optional)
use_static_ip = false  # Set to true if you want a static IP (may incur cost)

# Additional Labels (Optional)
labels = {
  owner      = "usod-team"
  department = "computer-science"
  university = "your-university"
  costcenter = "fyp"
}

# Notes:
# 1. Create GCP project: https://console.cloud.google.com/
# 2. Enable Compute Engine API: gcloud services enable compute.googleapis.com
# 3. Generate SSH key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/usod-key
# 4. Authenticate: gcloud auth application-default login

