# AWS Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Project Configuration
project_name = "usod"
environment  = "production"  # production, staging, or development

# EC2 Configuration
instance_type = "t2.micro"  # Free tier eligible

# SSH Key (IMPORTANT: Create this key pair in AWS first!)
# Steps:
# 1. Generate key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/usod-key
# 2. Import to AWS: aws ec2 import-key-pair --key-name usod-key --public-key-material fileb://~/.ssh/usod-key.pub
# 3. Or create in AWS Console: EC2 > Key Pairs > Create Key Pair
key_name = "usod-key"

# Security (IMPORTANT: Restrict SSH access in production!)
# Get your IP: curl ifconfig.me
# Then replace 0.0.0.0/0 with your-ip/32
allowed_ssh_cidr = ["0.0.0.0/0"]  # WARNING: Change this!

# Additional Tags (Optional)
tags = {
  Owner       = "USOD Team"
  Department  = "Computer Science"
  University  = "Your University"
  CostCenter  = "FYP"
}

