# Oracle Cloud Infrastructure (OCI) Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and update with your values

# OCI Authentication (REQUIRED)
# Get these from OCI Console: https://cloud.oracle.com/
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaa..."  # CHANGE THIS!
user_ocid        = "ocid1.user.oc1..aaaaaaaa..."     # CHANGE THIS!
fingerprint      = "aa:bb:cc:dd:ee:ff:..."           # CHANGE THIS!
private_key_path = "~/.oci/oci_api_key.pem"          # Path to your API private key

# Compartment (REQUIRED)
# Use tenancy_ocid for root compartment or create a new compartment
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaa..."  # CHANGE THIS!

# OCI Region
region = "us-ashburn-1"  # Change to your preferred Always Free region
# Always Free regions:
# - us-ashburn-1 (US East - Virginia)
# - us-phoenix-1 (US West - Arizona)
# - eu-frankfurt-1 (Germany)
# - uk-london-1 (UK)
# - ap-tokyo-1 (Japan)
# - ap-mumbai-1 (India)
# - ap-seoul-1 (South Korea)
# - ca-toronto-1 (Canada)
# - sa-saopaulo-1 (Brazil)

# Project Configuration
project_name = "usod"
environment  = "production"  # production, staging, or development
service_name = "blockchain"  # backend, ai-service, frontend, blockchain, or app

# Compute Instance Configuration (Always Free)
instance_shape     = "VM.Standard.E2.1.Micro"  # Always Free AMD (1 OCPU, 1GB RAM)
# Alternative Always Free option:
# instance_shape     = "VM.Standard.A1.Flex"   # ARM (4 OCPUs, 24GB RAM total across all instances)
instance_ocpus     = 1
instance_memory_gb = 1

# For ARM (A1.Flex), you can use up to 4 OCPUs and 24GB total:
# instance_shape     = "VM.Standard.A1.Flex"
# instance_ocpus     = 2  # Can go up to 4
# instance_memory_gb = 12 # Can go up to 24

# Storage Configuration
boot_volume_size = 50  # GB (Always Free supports up to 200GB total across boot volumes)

# Data Volume (Optional - Always Free: 2x 50GB volumes)
create_data_volume = false  # Set to true if you need extra storage
data_volume_size   = 50     # GB

# SSH Configuration
ssh_public_key_path = "~/.ssh/usod-key.pub"
hostname_label      = "usod-host"

# Object Storage (Always Free: 20GB)
bucket_access_type = "NoPublicAccess"  # NoPublicAccess, ObjectRead, ObjectReadWithoutList

# Additional Tags (Optional)
tags = {
  Owner      = "USOD Team"
  Department = "Computer Science"
  University = "Your University"
  CostCenter = "FYP"
  Purpose    = "Blockchain Network"
}

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Create OCI Account (Always Free):
#    https://www.oracle.com/cloud/free/
#
# 2. Generate API Key:
#    a. Login to OCI Console: https://cloud.oracle.com/
#    b. Click on your profile icon → User Settings
#    c. Under Resources, click "API Keys"
#    d. Click "Add API Key"
#    e. Download the private key (save as ~/.oci/oci_api_key.pem)
#    f. Copy the configuration file preview
#
# 3. Get OCIDs:
#    - Tenancy OCID: Profile menu → Tenancy: <name> → Copy OCID
#    - User OCID: Profile menu → User Settings → Copy OCID
#    - Compartment OCID: Navigation → Identity → Compartments
#
# 4. Set Permissions:
#    chmod 600 ~/.oci/oci_api_key.pem
#    chmod 644 ~/.ssh/usod-key.pub
#
# 5. Test Configuration:
#    oci iam region list --config-file ~/.oci/config
#
# =============================================================================
# ORACLE CLOUD ALWAYS FREE TIER LIMITS
# =============================================================================
#
# Compute:
# - 2x AMD VM.Standard.E2.1.Micro (1 OCPU, 1GB RAM each)
# - OR 4 OCPUs + 24GB RAM of ARM VM.Standard.A1.Flex (total across all instances)
#
# Storage:
# - 2x Block Volumes (50GB each, 100GB total)
# - 200GB total boot volume storage
# - 20GB Object Storage
# - 10GB Archive Storage
#
# Network:
# - 1 VCN
# - 1 Load Balancer (10Mbps)
# - 10TB/month outbound data transfer
#
# Database:
# - 2x Autonomous Database (20GB each, 1 OCPU each)
#
# Note: These limits are for Always Free tier and never expire!
#
# =============================================================================

